<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="20dp"
    android:background="#fff">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1."
        android:textSize="20dp"
        android:layout_alignParentLeft="true"
        android:id="@+id/_id"
        android:textColor="@color/colorAccent"/>

    <TextView
        android:layout_toRightOf="@+id/_id"
        android:paddingLeft="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Title"
        android:textSize="20dp"
        android:textColor="@color/black"
        android:id="@+id/to_read_title"/>

    <TextView
        android:layout_toRightOf="@+id/_id"
        android:paddingLeft="10dp"
        android:layout_below="@+id/to_read_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Author"
        android:textSize="15dp"
        android:id="@+id/to_read_author"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3.5"
        android:textSize="12dp"
        android:layout_below="@+id/to_read_author"
        android:layout_toRightOf="@id/_id"
        android:paddingLeft="10dp"
        android:textColor="@color/colorAccent"
        android:id="@+id/to_read_rate"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:background="@drawable/ic_action_delete"
        android:layout_centerVertical="true"
        android:id="@+id/delete_item"/>




</RelativeLayout>